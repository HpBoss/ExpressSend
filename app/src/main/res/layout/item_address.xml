<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/light_grey"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_schoolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="四川师范大学"/>
            <TextView
                android:id="@+id/tv_detailAddressName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_schoolName"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:text="游泳池斜对面菜鸟驿站"/>
            <View
                android:id="@+id/address_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:layout_below="@+id/tv_detailAddressName"
                android:background="@color/light_grey"/>
            <TextView
                android:id="@+id/tv_btnEdit"
                android:layout_below="@+id/address_divider"
                android:layout_toStartOf="@+id/tv_btnDelete"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_address"
                app:drawableStartCompat="@drawable/ic_edit_address" />
            <TextView
                android:id="@+id/tv_btnDelete"
                android:layout_below="@+id/address_divider"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_address"
                app:drawableStartCompat="@drawable/ic_delete_address" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>