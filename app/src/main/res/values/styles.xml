<resources xmlns:tools="http://schemas.android.com/tools">
    <!--我的账号，Dialog弹出动画-->
    <style name="main_menu_animStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>

    <style name="ReleaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@null</item>
    </style>

<!--    选择本地图片-->
    <style name="sl_theme_custom">
        <item name="colorPrimary">@color/blue_364</item>
        <item name="colorPrimaryDark">@color/sl_custom_primary_dark</item>
        <item name="toolbar.bg">@color/blue_364</item>
        <item name="toolbar.title.color">@color/white</item>
        <item name="toolbar.done.color">@color/blue_364</item>

        <item name="folder.item.bg">@color/sl_folder_item_bg_custom</item>
        <item name="folder.item.name.color">@color/sl_folder_item_name_custom</item>
        <item name="folder.item.size.color">@color/sl_folder_item_size_custom</item>
        <item name="folder.item.divider.color">@color/sl_folder_item_divider_custom</item>

        <item name="detail.bg">@color/sl_detail_bg_custom</item>
        <item name="detail.toolbar.bg">@color/sl_detail_toolbar_bg_custom</item>
        <item name="detail.toolbar.title.color">@color/sl_detail_toolbar_title_custom</item>
    </style>


    <style name="ChipTextAppearance" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChipSmallTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
